
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout1">
    <GridLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:columnCount="2"
        android:rowCount="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout1">
        <EditText
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:inputType="time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kaffeTime"
            android:focusableInTouchMode="false"/>
        <android.support.v7.widget.SwitchCompat
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Activated:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activateKaffee"
            android:layout_toRightOf="@id/kaffeTime"
            android:autoText="true"
            android:checked="true"/>
        <!--<Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Send Intent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/sendIntent"
            android:layout_below="@id/kaffeTime"/>
        <TextView
            android:text=""
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView1" />-->
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Kaffemaschine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/kaffeToggle"
            android:layout_below="@id/kaffeTime"/>
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Licht"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/lichtToggle"
            android:layout_below="@id/activateKaffee"/>
        <Button
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:text="TestJob"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:minWidth="25px"
          android:minHeight="25px"
          android:id="@+id/testButton"
          android:layout_below="@id/kaffeToggle"/>
    </GridLayout>

</RelativeLayout>